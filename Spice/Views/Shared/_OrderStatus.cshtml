@model string
@using Spice.Utility
<form method="post">
    <div class="container row border ml-1 backgroundWhiteBorder10Padding" style="width:100%">
        @if(Model == SD.StatusSubmitted)
        {
            <img src="@SD.OrderStatusPlaced"/>
        }
        @if(Model == SD.StatusInProcess)
        {
            <img src="@SD.OrderStatusInKitchen"/>
        }
        @if(Model == SD.StatusReady)
        {
            <img src="@SD.OrderStatusReadyForPickup"/>
        }
        @if(Model == SD.StatusCompleted)
        {
            <img src="@SD.OrderStatusCompleted"/>
        }

    </div>
</form>